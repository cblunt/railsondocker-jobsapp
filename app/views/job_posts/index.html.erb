<h1>Job Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_posts.each do |job_post| %>
      <tr>
        <td><%= job_post.title %></td>
        <td><%= job_post.body %></td>
        <td><%= link_to 'Show', job_post %></td>
        <% if current_user&.admin? %>
          <td><%= link_to 'Applications', job_post_job_applications_path(job_post) %></td>
          <td><%= link_to 'Edit', edit_job_post_path(job_post) %></td>
          <td><%= link_to 'Destroy', job_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job Post', new_job_post_path %>
